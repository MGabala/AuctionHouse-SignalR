@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row">
    <div class="col-md-10 col-md-offset-2">
        <table class="table">
            <thead>
                <tr>
                    <th>Item</th>
                    <th class="textright">Current bid</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var auction in Model.Auctions)
                {
                    <tr id="@auction.Id-tr" class="align-middle">
                        <td>@auction.ItemName</td>
                        <td id="@auction.Id-bidtext" class="bid">@auction.CurrentBid</td>
                        <td class="bid-form-td">
                            <input id="@auction.Id-input" class="bid-input" type="number" value="@(auction.CurrentBid + 1)" />
                            <form method="post">
                                <button type="submit" class="btn btn-sm btn-danger" asp-page-handler="NewBid" asp-route-newBid="@auction.CurrentBid" asp-route-id="@auction.Id">Przycisk</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
